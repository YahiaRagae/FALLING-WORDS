<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <ProgressBar
        android:id="@+id/pb_timer_circle"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/circle_shape"
        android:indeterminate="false"
        android:progress="1"
        android:progressDrawable="@drawable/circular_progress_bar" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/pb_timer_circle"
        android:layout_alignTop="@+id/pb_timer_circle"
        android:layout_alignLeft="@id/pb_timer_circle"
        android:layout_alignRight="@id/pb_timer_circle"
        android:layout_alignStart="@id/pb_timer_circle"
        android:layout_alignEnd="@id/pb_timer_circle"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/tv_counter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="00:00"
            android:textSize="@dimen/text_size_counter" />

    </RelativeLayout>

</RelativeLayout>